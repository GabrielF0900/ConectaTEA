{
  "compilerOptions": {
    "target": "ES2020",                           
    "module": "CommonJS",                        
    "rootDir": "./src",                          
    "outDir": "./dist",                          
    "strict": true,                              
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true,                        
    "resolveJsonModule": true,                   
    "moduleResolution": "node",                  
    "types": ["node"],                           
    "sourceMap": true                            
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
